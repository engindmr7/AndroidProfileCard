<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_margin="32dp"
        app:cardBackgroundColor="@android:color/background_light"
        app:contentPadding="32dp"
        app:cardCornerRadius="16dp"
        android:elevation="20dp"
        android:translationZ="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/circleimage"
                android:layout_marginTop="32dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AlikaMedia"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorAccent"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\@alikamedia"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alika Media bu yola küçük bir masada biz neden yapmıyoruz diye düşüncesiyle yapılan sohbet ortamında ortaya çıkmış heyecan dolu ruha sahip dijital performans ajansıdır."
                android:gravity="center"
                android:layout_marginTop="16dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Follow"
                android:layout_marginTop="16dp"
                android:background="@drawable/button"
                android:textColor="@android:color/white"/>










        </LinearLayout>











    </android.support.v7.widget.CardView>

</LinearLayout>